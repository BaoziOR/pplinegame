.notice-blackbg{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(1, 1, 1, 0.7);
}

.notice-container{
  width: 614rpx;
  height: 780rpx;
  position: absolute;
  left: 68rpx;
  top: 141rpx;
  background: #fffaf3;
  border-radius: 10rpx;
  animation: scale-animation 0.3s ease-in-out 0ms 1;
}

@keyframes scale-animation{
  0%{transform: scale(0);}
  100%{transform: scale(1);}
}

