.signin-containerbg{
  width: 100%;
  height: 100%;
  background: rgba(1, 1, 1, 0.7);
  position: fixed;
  left: 0;
  top: 0;
}

.signin-container{
  width:  619rpx;
  height: 736rpx;
  background: #fdfae9;
  position: absolute;
  left: 65.5rpx;
  top: 138rpx;
  border-radius: 10rpx;
}

.signin-titlebg{
  width: 619rpx;
  height: 82rpx;
  position: absolute;
  top: 0;
  left: 0;
  background: #704cd9;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

.signin-title{
  width: 108rpx;
