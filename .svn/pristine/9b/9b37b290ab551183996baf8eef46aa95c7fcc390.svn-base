  justify-content: space-between;
  flex-wrap: wrap;
  align-items: center;
  /* background: red;  */
}

.signin-item{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  position: relative;
}

.signin-item-normal{
  width: 146rpx;
  height: 156rpx;
  border-radius: 10rpx;
}

.signin-item-day7{
  width: 505rpx;
  height: 163rpx;
  border-radius: 10rpx;
}

.signin-item-title{
  font-size: 25rpx;
  font-weight: bold;
}

.signin-reward-icon{
 margin-top: 15rpx;
}

.signin-reward-count-view{
  display: flex;
  justify-content: center;
  align-items: center;
}

.signin-reward-count{
  font-size: 25rpx;
  font-weight: bold;
}

.signin-skin-view{
  border-radius: 100%;
