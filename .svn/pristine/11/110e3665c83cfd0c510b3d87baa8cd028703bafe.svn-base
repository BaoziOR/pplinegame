.colorful-container{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: #fefae8;
}

.colorful-logo{
  width: 750rpx;
  height: 308rpx;
  position: absolute;
  top: 0;
  left: 0;
}

.difficulty {
  height: 50%;
  width: 100%; 
  position: absolute;
  top: 320rpx;
  left: 0;
  background: red;
}
/*滑动条影藏  */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.difficultBtn {
  width: 614rpx;
  height: 198rpx;
  border-radius: 12rpx;
  color: white;
  font-size: 44rpx;
  display: flex;
  align-self: center;
  margin-bottom: 40rpx;
}

.difficultyBg{
  width: 142rpx;
  height: 171rpx;
  position: relative;
  left: 18rpx;
  top: -5rpx;  
}
.difficultIcon {
  width: 142rpx;
  height: 171rpx;  
}
.diffAward{
  position: absolute;
  width: 87rpx;
  height: 116rpx;  
  top:10rpx;
  left: 27rpx;
  z-index: 11;
  animation-delay: 5s;  
}

.difficultTxt {
  position: relative;
  left: 40rpx;
  width: 395rpx;
  height:190rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  align-self: center;
}

.diffTxt {
  width: 250rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  align-self: flex-start;
}

.lockbg{
  width: 139rpx;
  height: 62rpx;
  align-self: flex-end;
  position: absolute;
  top: 10rpx;
  right: -10rpx;
  display: flex;
  direction: rtl;
  border-radius: 10rpx;
  background: rgba(0, 0, 0, 0.4);
}
.bigShare{
  position:absolute;
  z-index:12;
  width: 614rpx;
  height:215rpx; 
  border-radius: 12rpx;
  background:rgba(0, 0, 0, 0.5);
}
.lockShare{
  position:relative;
  z-index:13;
  width:139rpx;
  height:56rpx; 
  margin-top:-6rpx;
  border:none;
  background-color:white;
  align-self:center;
  font-size:30rpx;
  color:#868686;
  display: flex;
  align-items: center;
  justify-content: center;
}

.down {
  width: 635rpx;
  height: 100rpx;
  margin-top: 55rpx;
  display: flex;
  align-self: center;
  align-items: center;
  justify-content: flex-start;
}

.downback {
  width: 86rpx;
  height: 86rpx;
}

.backShare {
  width: 270rpx;
  height: 91rpx;
  box-shadow: 0 8rpx #82bf2b;
  border-radius: 10rpx;
  background-color: #aedc21;
  margin-left: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  font-size: 33rpx;
  font-weight: bold;
  text-shadow: 0 3rpx #718f15;
}

.friend {
  width: 212rpx;
  height: 62rpx;
  align-self: flex-end;
  position: absolute;
  top: 125rpx;
  right: -10rpx;
  display: flex;
  direction: rtl;
}

.friendbg {
  width: 54rpx;
  height: 54rpx;
  border-radius: 8rpx;
  padding: 2rpx;
  margin-left: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.firendIcon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 7rpx;
}

.suoAnim{
  animation:anim 2s ease-in-out 10;
}
@keyframes anim{
  0%{ transform: rotateY(20deg )}
  10%{transform: rotateY(0deg )}
  30%{transform: rotateY(-10deg )}
  60%{transform: rotateY(0deg )}
  90%{transform: rotateY(10deg )}
  100%{transform: rotateY(20deg )}
}