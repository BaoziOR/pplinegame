.containerbgs{
  width: 100%;
  height: 100%;
  background: rgba(1, 1, 1, 0.7);
  display: flex;
  justify-content: center;
  align-items: center;
  align-self: center;
  position: fixed;
  z-index: 100;
}
.holiday{
  width:750rpx;
  height: 982rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  animation: holi 1s linear ;   
}
.holidayImg{
  width:750rpx;
  height: 982rpx;
}
.shareBtn{
  width: 350rpx;
  height:98rpx;
  background-color: #ff6868;
  box-shadow: 0 8rpx #ca4141;
  border-radius: 20rpx;
  margin-top:-280rpx;
  color: white;
  font-size: 33rpx;
  font-weight: bolder;
}

.holidayClose{
  position: absolute;
  width: 51rpx;
  height:49rpx;
  margin-top: 20rpx;
  right: 95rpx;
  border-radius: 10rpx;
  background-color: #ecc5bb;
  display: flex;
  align-items: center;
  justify-content: center;
}
.holidayCloseImg{
  width: 34rpx;
  height:34rpx;
}

@keyframes holi{
  0% {
    transform: scale(0.1,0.1) rotate(0deg);
  }
  50% {
    transform: scale(1.2,1.2)  rotate(60deg);
  }
  100% {
    transform:scale(1,1)  rotate(0deg);
  }
}
